<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".options.SecurityFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/security_head_bar"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/security_head_img"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_security"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/security"
        android:layout_gravity="center"
        android:textAppearance="@style/nav_rail_style"
        android:textSize="@dimen/_40sdp"

        android:id="@+id/security_head"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/security_head_bar" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/change_email"
            android:textAppearance="@style/nav_rail_style"
            android:text="Change E-Mail"
            android:textSize="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:textColor="?attr/colorControlNormal"
            android:textAlignment="center"
            android:backgroundTint="?attr/colorPrimaryVariant"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/change_password"
            android:textAppearance="@style/nav_rail_style"
            android:text="Change Password"
            android:layout_marginVertical="@dimen/_5sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="?attr/colorControlNormal"
            android:textAlignment="center"
            android:backgroundTint="?attr/colorPrimaryVariant"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>